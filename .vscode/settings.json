{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.tabSize": 2,
  "editor.formatOnPaste": true,

  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.validate.enable": true,
  "typescript.suggest.autoImports": true,

  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
  "eslint.run": "onSave",

  "prettier.requireConfig": true,

  "files.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/.next": true
  },
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/.git/**": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.next": true
  },

  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.inheritEnv": true,

  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,

  "jest.runMode": "on-demand",

  "editor.codeActionsOnSaveTimeout": 750,

  // GitLens Configuration for Legal/Security Codebase
  "gitlens.blame.compact": false,
  "gitlens.blame.format": "${author|10} ${date} ${message}",
  "gitlens.blame.highlight.locations": ["line", "overview"],
  "gitlens.blame.avatars": false,
  "gitlens.codeLens.enabled": true,
  "gitlens.codeLens.authors.enabled": true,
  "gitlens.codeLens.recentChange.enabled": true,
  "gitlens.currentLine.enabled": true,
  "gitlens.currentLine.pullRequests.enabled": true,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.hovers.annotations.over": "line",
  "gitlens.statusBar.enabled": true,
  "gitlens.views.fileHistory.files.compact": false,
  "gitlens.views.lineHistory.enabled": true,
  "gitlens.advanced.messages": {
    "suppressShowKeyBindingsNotice": true
  },

  // Security-focused file associations
  "gitlens.blame.ignoreWhitespace": true,
  "gitlens.defaultDateFormat": "YYYY-MM-DD HH:mm",
  "gitlens.defaultDateShortFormat": "MM-DD",

  // Show detailed history for critical files
  "files.associations": {
    "*.env*": "properties",
    "CLAUDE.md": "markdown",
    "*.sql": "sql"
  },

  // Workspace Layout Optimization for Legal Development
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.openPositioning": "right",
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.tabCloseButton": "right",
  "workbench.editor.tabSizing": "fit",
  "workbench.editor.wrapTabs": true,
  "workbench.editor.pinnedTabSizing": "compact",

  // Panel and Sidebar Configuration
  "workbench.panel.defaultLocation": "bottom",
  "workbench.sideBar.location": "left",
  "workbench.statusBar.visible": true,

  // Explorer and File Tree Settings
  "explorer.compactFolders": false,
  "explorer.confirmDelete": true,
  "explorer.confirmDragAndDrop": true,
  "explorer.sortOrder": "type",
  "explorer.decorations.colors": true,
  "explorer.decorations.badges": true,

  // Search Configuration for Legal Codebase
  "search.useGlobalIgnoreFiles": true,
  "search.useParentIgnoreFiles": true,
  "search.smartCase": true,
  "search.showLineNumbers": true,
  "search.seedOnFocus": true,
  "search.seedWithNearestWord": true,

  // Editor Layout for Code Review
  "editor.minimap.enabled": true,
  "editor.minimap.showSlider": "always",
  "editor.minimap.renderCharacters": false,
  "editor.scrollBeyondLastLine": false,
  "editor.renderWhitespace": "trailing",
  "editor.rulers": [80, 120],
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 120,

  // Terminal Configuration
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.rightClickBehavior": "copyPaste",

  // Breadcrumbs for Navigation
  "breadcrumbs.enabled": true,
  "breadcrumbs.showFiles": true,
  "breadcrumbs.showSymbols": true,
  "breadcrumbs.symbolPath": "on",

  // Problems Panel for Code Quality
  "problems.decorations.enabled": true,
  "problems.showCurrentInStatus": true,

  // Security and Audit Specific Settings
  "security.workspace.trust.banner": "always",
  "security.workspace.trust.startupPrompt": "always",

  // Diff Editor for Code Reviews
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": true,
  "diffEditor.renderIndicators": true,

  // Outline View for Legal Document Structure
  "outline.showVariables": true,
  "outline.showFunctions": true,
  "outline.showClasses": true,
  "outline.showModules": true,

  // Zen Mode for Focused Development
  "zenMode.centerLayout": false,
  "zenMode.hideActivityBar": false,
  "zenMode.hideStatusBar": false,
  "zenMode.restore": true,
  "workbench.editor.tabActionLocation": "right",

  // Legal Development Specific
  "files.associations": {
    "*.env*": "properties",
    "CLAUDE.md": "markdown",
    "*.sql": "sql",
    "*.legal": "markdown",
    "*.template": "markdown",
    "*.policy": "markdown"
  },
  "github.copilot.chat.virtualTools.threshold": 128,

  // Enhanced Development Workflow
  "task.autoDetect": "on",
  "task.quickOpen.history": 15,
  "task.problemMatchers.neverPrompt": {
    "shell": true
  },

  // Claude Code Integration
  "claude.theme": "claude-code",
  "claude.outputStyle": "enhanced-dev",
  "claude.autoSave": true,

  // Enhanced Error Display
  "errorLens.enabledDiagnosticLevels": [
    "error",
    "warning",
    "info"
  ],
  "errorLens.enabled": true,

  // Git Auto-commit Settings
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  "git.fetchOnPull": true,
  "git.allowForcePush": false,
  "git.alwaysSignOff": true,

  // Auto-fix and Development Acceleration
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  "editor.suggestSelection": "first",
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.inlineSuggest.enabled": true,

  // Performance Optimizations
  "typescript.disableAutomaticTypeAcquisition": false,
  "typescript.preferences.quoteStyle": "single",
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.variableTypes.enabled": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "chat.mcp.autostart": "newAndOutdated"
}
