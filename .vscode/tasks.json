{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Dev: Start client",
			"type": "shell",
			"command": "npm run dev",
			"group": "build",
			"isBackground": true
		},
		{
			"label": "Dev: Start server (inspect)",
			"type": "shell",
			"command": "npm run dev:debug",
			"group": "build",
			"isBackground": true
		},
		{
			"label": "DB: Setup",
			"type": "shell",
			"command": "make db-setup",
			"group": "none"
		},
		{
			"label": "DB: Seed",
			"type": "shell",
			"command": "make db-seed",
			"group": "none"
		}
	],
	"inputs": [
		{
			"id": "prTitle",
			"description": "Pull Request Title",
			"default": "feat: ",
			"type": "promptString"
		},
		{
			"id": "prBody",
			"description": "Pull Request Body",
			"default": "## Summary\n\n## Changes\n\n## Testing",
			"type": "promptString"
		}
	]
}
